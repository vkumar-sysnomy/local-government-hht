<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    tools:context="com.farthestgate.android.ui.dialogs.TimeplateDialog"
    android:gravity="center">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="false"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:id="@+id/spin_Layout"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <Spinner
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/spinner_max"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_weight="0.5"
            android:gravity="center"
            android:prompt="@string/max_time_prompt"
            android:layout_gravity="center"/>

        <Spinner
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/spinner_return"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:layout_alignTop="@+id/spinner_max"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:prompt="@string/max_return_prompt"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:weightSum="1"
        android:id="@+id/layoutLabels"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal|top">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Maximum Stay"
            android:id="@+id/textView"
            android:layout_weight="0.5"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="No Return"
            android:id="@+id/textView2"
            android:layout_weight="0.5"
            android:gravity="center"
            android:layout_margin="5dp"
            android:textSize="18dp"
            android:layout_gravity="center"/>
    </LinearLayout>

</RelativeLayout>
