<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="false"
    android:weightSum="1"
    android:gravity="bottom"
    android:background="#ff000000"
    android:layout_alignParentEnd="false"
    android:layout_alignParentBottom="true"
    android:id="@+id/toolbarLayout"
    android:padding="2dp">

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnCancelPcn"
        android:layout_weight="0.25"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/cancel2_selector"
        android:background="@android:color/transparent"
        android:layout_marginLeft="1dp" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnPhotos"
        android:layout_weight="0.25"
        android:src="@drawable/camerabtn_selector"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:layout_marginLeft="1dp" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/imgBtnNotes"
        android:layout_weight="0.25"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/notes_selector"
        android:background="@android:color/transparent"
        android:layout_marginLeft="1dp" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        android:layout_marginLeft="1dp">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnNextStep"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:src="@drawable/done_selector"
            android:scaleType="fitXY" />

    </RelativeLayout>

</LinearLayout>