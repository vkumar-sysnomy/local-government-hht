<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.pcn.CameraFragment">


    <com.farthestgate.android.ui.components.views.CameraPreview
             android:id="@+id/camera_preview"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent" />

    <com.farthestgate.android.ui.components.widget.VerticalSeekBar
             android:id="@+id/zoom"
             android:background="@android:color/transparent"
             android:layout_alignParentLeft="true"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:id="@+id/focus"
        android:scaleType="centerInside"
        android:src="@drawable/photo_mark2"
        android:clickable="true" />

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/photo_btn"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/camera"
        android:layout_marginRight="10dp"
        android:clickable="true" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/preview"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:id="@+id/btnSavePreview"
        android:src="@drawable/accept_serlector"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/focus"
        android:scaleType="fitXY"
        android:background="@android:color/darker_gray"
        android:layout_alignTop="@+id/btnDiscardPreview"
        android:visibility="gone"
        android:adjustViewBounds="true"/>

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:id="@+id/btnDiscardPreview"
        android:src="@drawable/discard_selector"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/focus"
        android:visibility="gone"/>

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/galleryImageButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="false"
        android:src="@drawable/gallery_t"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:visibility="visible"/>

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/flashModeOn"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="false"
        android:src="@drawable/flash_d"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:visibility="visible"/>
    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/flashModeOff"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="false"
        android:src="@drawable/flash_t"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:visibility="gone"/>


</RelativeLayout>
