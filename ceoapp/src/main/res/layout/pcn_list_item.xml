<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_gravity="left"
    android:background="@drawable/status_bg2"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/infoPanelLayout"
        android:visibility="gone"
        android:baselineAligned="false"
        android:paddingLeft="6dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="PCN #:"
            android:id="@+id/txtPCNItemText"
            android:layout_weight="0.5"
            android:textSize="18dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:paddingLeft="4dp"
            android:paddingTop="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Issued:"
            android:id="@+id/txtIssueTime"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:paddingLeft="4dp"
            android:textSize="18dp"
            android:layout_weight="0.5" />

    </LinearLayout>
<!-- -->
    <com.farthestgate.android.ui.components.timer.TimerListItem
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:longClickable="false"
        android:background="#020203"
        android:id="@+id/timerView"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_margin="4dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/layoutOffence"
            android:layout_weight="0.4">

            <TextView
                android:id="@+id/txtOffence"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:singleLine="false"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textIsSelectable="true"
                android:gravity="center"
                android:paddingLeft="1dp"
                android:paddingRight="2dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp" />

            <TextView
                android:id="@+id/registration_mark"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:singleLine="false"
                android:textSize="28dp"
                android:textIsSelectable="true"
                android:gravity="center"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:background="@drawable/street_back"
                android:layout_margin="2dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/layoutVehicle"
            android:layout_weight="0.6">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="20dp"
                android:id="@+id/txtLocation_info"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:padding="1dp"
                android:minLines="3"
                android:layout_weight="0.6"
                android:layout_margin="1dp"
                android:autoText="false" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="14dp"
                android:id="@+id/txtOS"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:layout_weight="0.4"
                android:autoText="false"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>