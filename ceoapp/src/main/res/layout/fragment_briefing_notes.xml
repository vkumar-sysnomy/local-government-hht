<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.farthestgate.android.ui.messages.BriefingNotesFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/briefing_notes_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentTop="true"
            android:visibility="invisible">
            <TextView
                android:id="@+id/briefing_notes_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Notes"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/CEO_green"/>
            <TextView
                android:id="@+id/briefing_notes_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Briefing Notes"
                android:textStyle="bold"
                android:textColor="@color/CEO_green"/>
        </LinearLayout>

        <ScrollView
            android:id="@+id/briefing_notes_main_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/briefing_notes_header"
            android:layout_above="@+id/briefing_notes_footer">
            <WebView
                android:id="@+id/briefing_notes_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:visibility="invisible"/>
        </ScrollView>

        <TextView
            android:id="@+id/no_briefing_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="No briefing notes found"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/briefing_notes_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:visibility="invisible">
            <CheckedTextView
                android:id="@+id/declaration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Confirm you have read/understood this page."
                android:textStyle="bold"
                android:drawableLeft="?android:attr/listChoiceIndicatorMultiple"
                android:checked="false"
                android:visibility="invisible"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_alignParentLeft="true"
                    android:enabled="false"
                    android:background="@drawable/back_selector_m"
                    android:layout_marginLeft="10dp"/>
                <Button
                    android:id="@+id/btnNext"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_alignParentRight="true"
                    android:enabled="false"
                    android:background="@drawable/next_selector_m"
                    android:layout_marginRight="10dp"/>

                <Button
                    android:id="@+id/btnExit"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/exit_selector_m"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"/>
            </RelativeLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/icon_complete"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/icon_complete"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:visibility="gone"/>
    </RelativeLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>